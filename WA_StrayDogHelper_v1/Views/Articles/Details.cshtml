@model WA_StrayDogHelper_v1.Models.DomainModels.Article
@using Microsoft.AspNetCore.Identity
@using System.Security.Claims;
@inject SignInManager<WA_StrayDogHelper_v1.Models.IdentityModels.ApplicationUser> SignInManager
@inject UserManager<WA_StrayDogHelper_v1.Models.IdentityModels.ApplicationUser> UserManager






<br>

<div class="container">
    <div class="row">
        <div class="col-6">
            <img src="~/Images/ImagesForArticles/@Model.ImageName" style="width:500px; height:500px;">
        </div>
        <div class="col-6">
            <h2>@Model.Title</h2>

            <hr style="background-color: red;">
            <div class="mt-2">
                <div>
                <h5 class="d-inline p-2">Category: </h5> <p class="d-inline p-2" style="font-size: large;">  @Model.Tag</p>
                    </div>
                <div>
                <h5 class="d-inline p-2">Posted by: </h5> <p class="d-inline p-2" style="font-size: large;">  @Model.User.Email</p>
                    </div>
            </div>
            <br />
            <div class="mt-2 mb-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-calendar" viewBox="0 0 16 16">
                    <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z" />
                </svg> <h5 class="d-inline p-2">Created: </h5> <p class="d-inline p-2" style="font-size: large;">@Model.Created</p>
            </div>


            <p style="font-size: large;">@Model.Content</p>
        </div>



    </div>
    <div class="row">
        <div class="col-6">

        </div>
        <div class="col-6">
           
            <div class="mt-2">
                @{
                    var loggedInUserId = User.FindFirstValue(ClaimTypes.NameIdentifier);
                    if (Model.UserId.Equals(loggedInUserId))
                    {

                        
                        <div class="mr-4 pr-4">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary mt-2" style="border-color:dimgrey">Edit</a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger mt-2" style="border-color:dimgrey">Delete</a>
                        </div>
                    }
                    else
                    {


                <a asp-action="AddToFavoriteArticles" asp-route-id="@Model.Id" class="btn btn-outline-warning">
                    Add to favorites <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-heart" viewBox="0 0 16 16">
                        <path d="m8 2.748-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01L8 2.748zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143c.06.055.119.112.176.171a3.12 3.12 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15z" />
                    </svg>
                </a>
                        }
                    }

            </div>
        </div>
    </div>

</div>
