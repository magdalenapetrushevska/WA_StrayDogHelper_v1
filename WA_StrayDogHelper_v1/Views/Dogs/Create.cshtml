@model WA_StrayDogHelper_v1.Models.DomainModels.Dog



<h2>Add new record</h2>


<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label asp-for="AgeYears" class="control-label"></label>
                        <input asp-for="AgeYears" class="form-control" />
                        <span asp-validation-for="AgeYears" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label asp-for="AgeMonths" class="control-label"></label>
                        <input asp-for="AgeMonths" class="form-control" />
                        <span asp-validation-for="AgeMonths" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Sex" class="control-label"></label>
                <select asp-for="Sex" class="form-control">
                    <option>Male</option>
                    <option>Female</option>
                </select>
                <span asp-validation-for="Sex" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Size" class="control-label"></label>
                <select asp-for="Size" class="form-control">
                    <option>Small</option>
                    <option>Medium</option>
                    <option>Large</option>
                </select>
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Breed" class="control-label"></label>
                <input asp-for="Breed" class="form-control" />
                <span asp-validation-for="Breed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label> <br />
                <input asp-for="ImageFile" accept="image/*" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <br />
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label asp-for="Disabled" class="control-label"></label>
                        <select asp-for="Disabled" class="form-control">
                            <option>True</option>
                            <option>False</option>
                        </select>
                        <span asp-validation-for="Disabled" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label asp-for="Sterilized" class="control-label"></label>
                        <select asp-for="Sterilized" class="form-control">
                            <option>True</option>
                            <option>False</option>
                        </select>
                        <span asp-validation-for="Sterilized" class="text-danger"></span>
                    </div>
                </div>
            </div>

                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="Vaccinated" class="control-label"></label>
                            <select asp-for="Vaccinated" class="form-control">
                                <option>True</option>
                                <option>False</option>
                            </select>
                            <span asp-validation-for="Vaccinated" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="Chipped" class="control-label"></label>
                            <select asp-for="Chipped" class="form-control">
                                <option>True</option>
                                <option>False</option>
                            </select>
                            <span asp-validation-for="Chipped" class="text-danger"></span>
                        </div>
                    </div>
                </div>
          
            <div class="form-group">
                <label asp-for="ShortLifeStory" class="control-label"></label>
                @*<input asp-for="ShortLifeStory" class="form-control" />*@
                <textarea asp-for="ShortLifeStory" class="form-control" aria-label="With textarea"></textarea>
                <span asp-validation-for="ShortLifeStory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ListDogCategories">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
