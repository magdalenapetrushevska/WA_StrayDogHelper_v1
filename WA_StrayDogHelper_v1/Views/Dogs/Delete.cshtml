@model WA_StrayDogHelper_v1.Models.DomainModels.Dog



<br>
<h3 class="text-center">Are you sure you want to delete this?</h3>
<br>
<div class="container">
    <div class="row">
        <div class="col-6">
            <img src="~/Images/AdoptionDogImages/@Model.ImageName" style="width:500px; height:500px;">
        </div>
        <div class="col-6">
            <h4>Dog info</h4>
            <hr style="background-color: red;">
            <div>
                <h5 class="d-inline p-2">Name: </h5> <p class="d-inline p-2" style="font-size: large;">@Model.Name</p>
            </div>

            <div class="mt-2">
                <h5 class="d-inline p-2">Age: </h5> <p class="d-inline p-2" style="font-size: large;">@Model.AgeYears years and @Model.AgeMonths months</p>
            </div>

            <div class="mt-2">
                <h5 class="d-inline p-2">Sex: </h5> <p class="d-inline p-2" style="font-size: large;">@Model.Sex.ToString()</p>
            </div>

            <div class="mt-2">
                <h5 class="d-inline p-2">Size: </h5> <p class="d-inline p-2" style="font-size: large;">@Model.Size.ToString()</p>
            </div>

            <div class="mt-2">
                <h5 class="d-inline p-2">Breed: </h5> <p class="d-inline p-2" style="font-size: large;">@Model.Breed</p>
            </div>

           
            <div class="mt-3">
                <h5 class="d-inline p-2">Short info: </h5> <p class="d-inline p-2" style="font-size: large;">@Model.ShortLifeStory</p>
            </div>
            <div class="mt-4">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a asp-action="Index">Back to List</a>
                </form>
            </div>

        </div>

    </div>
